<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/arsenic_settings_title" >

    <!-- Arsenic title tweaks -->
    <PreferenceCategory
        android:title="@string/arsenic_settings_title">

    <!-- Notifications Settings --> 
    <PreferenceScreen
            android:id="@+id/incall_vib_options"
            android:title="@string/incall_vibration_category"
            android:fragment="com.android.settings.arsenic.NotificationSettings" />

    <!-- HeadsUp Settings --> 
    <PreferenceScreen
            android:id="@+id/HeadsUp"
            android:title="@string/heads_up_title"
            android:fragment="com.android.settings.arsenic.fragments.HeadsUpSettings" />

    <!-- Status bar tweaks -->         
        <PreferenceScreen
                android:id="@+id/status_bar_settings"
                android:title="@string/status_bar_title"
		android:fragment="com.android.settings.arsenic.StatusBar" />

    <!-- QS Panel 
    <PreferenceScreen
            android:id="@+id/qs_customizations"
            android:title="@string/arsenic_qs_title"
            android:fragment="com.android.settings.arsenic.QsPanel" /> -->

    <!-- Lockscreen -->
    <PreferenceScreen
            android:id="@+id/lockscreen"
            android:title="@string/arsenic_lockscreen_title"
   	    android:fragment="com.android.settings.arsenic.LockScreenSettings" />
               
    <!-- Misc 
    <PreferenceScreen
            android:id="@+id/misc"
	    android:title="@string/arsenic_misc_title"
   	    android:fragment="com.android.settings.arsenic.MiscSettings" /> -->

</PreferenceCategory>

</PreferenceScreen>
